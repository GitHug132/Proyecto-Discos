@model ProyectoDiscos.Models.Cliente

@{
    Layout = null;
}

<!DOCTYPE HTML>
<html>
<head>
    <title>Home</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Music8 Responsive web template, Bootstrap Web Templates, Flat Web Templates, Andriod Compatible web template,
Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyErricsson, Motorola web design" />
    <script type="applijewelleryion/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>

    <link rel="stylesheet" href="http://netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css">
    <link href="@Url.Content("~/css/bootstrap.css")" rel='stylesheet' type='text/css' />
    <!-- Custom Theme files -->
    <link href="@Url.Content("~/css/style.css")" rel='stylesheet' type='text/css' />
    <script src="@Url.Content("~/Scripts/js/jquery-1.11.1.min.js")"></script>
    <!--Jquerry-UI-->
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <link href="@Url.Content("~/css/jquery-ui.min.css")" media="all" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/css/jquery-ui.structure.min.css")" media="all" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/css/jquery-ui.theme.min.css")" media="all" rel="stylesheet" type="text/css" />
    <!--webfonts-->
    <link href='//fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,400,300,600,700|Six+Caps' rel='stylesheet' type='text/css'>
    <!--//webfonts-->

    <link href="@Url.Content("~/css/star-rating.css")" media="all" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/js/star-rating.js")" type="text/javascript"></script>
    <!--Toastr-->
    <link href="http://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" media="screen" rel="stylesheet" type="text/css" />
    <script type="text/javascript" src="http://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>

</head>
<body>

    <!--dialog de log in-->
    <div class="dialog" id="dialog" title="Log In">

        @using (Html.BeginForm("Login","Pagina"))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label col-md-2" })
                    <br />
                    <br />
                    <div class="col-md-13">
                        @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control", id = "nombre1" } })
                        @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
                    <br />
                    <br />
                    <div class="col-md-13">
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", id="password1", type="password", @readonly="true"} })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-13">
                        <input id="Create" type="submit" value="Log In" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }

    </div>

    <!--dialog de registro-->
    <div class="dialog" id="dialog2" title="Register">
        @using (Html.BeginForm("Register","Pagina"))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control", id = "nombre2" } })
                        @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", id = "password2", type = "password", @readonly = "true" } })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.FechaNacimiento, htmlAttributes: new { @class = "control-label col-md-2" })
                    <br />
                    <br />
                    <div class="col-md-13">
                        @Html.EditorFor(model => model.FechaNacimiento, new { htmlAttributes = new { @class = "form-control", type= "date" } })
                        @Html.ValidationMessageFor(model => model.FechaNacimiento, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-13">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
    </div>

    <!--manu-->
    <div class="header-top">
        <div class="header-bottom">
            <div class="fixed-header">
                <div class="logo">
                    <img id="logo" class="img-responsive" src="@Url.Content("~/images/logo.svg")" />
                </div>
                <div class="hd-lt">
                    <span class="menu"> </span>
                    <div class="top-menu">
                        <nav class="cl-effect-21">
                            <ul>
                                <li>@Html.ActionLink("Home", "Index", "Pagina")</li>
                                <li>@Html.ActionLink("Lista", "Lista", "Lista")</li>
                                <li>@Html.ActionLink("Top 5", "Index", "Grafica")</li>
                                @if (Session["Nombre"] == null)
                                {
                                    <li><a id="LogIn" href="#">Log In</a></li>
                                    <li><a id="Register" href="#">Register</a></li>
                                }
                                else
                                {
                                    <li>@Html.ActionLink("Log Out", "Logout", "Pagina")</li>
                                }
                                <div class="clearfix"></div>

                            </ul>
                            <div id="content"></div>
                        </nav>
                    </div>

                    <div class="header-right">

                        @if (Session["Nombre"] != null)
                        {
                            <label>Has Iniciado sesión!<br /><span id="nombreCliente">@Session["Nombre"].ToString()</span></label>
                            <span id="IdCliente" style="display:none;">@Session["IdCliente"].ToString()</span>
                        }
                        else
                        {
                            <label>No has iniciado sesión</label>
                            <span id="IdCliente" style="display:none;"></span>
                        }
                    </div>


                    <div class="header-right">
                        <ul class="f-icons social">
                            <li><a href="https://es-es.facebook.com/" class="facebook"> </a></li>
                            <li><a href="https://twitter.com/?lang=es" class="twitter"> </a></li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>

    <!--main body-->
    <div class="events">
        <div class="container">
            <!--banner-->
            <div id="lista" class="col-md-9 events-left">
                <img id="logo" class="img-responsive" src="@Url.Content("~/images/ban2.jpg")" />
            </div>

            <!--map de imagenes-->
            <div class="col-md-3 events-right">
                <div class="box">
                    <map name="mapaAdrian">
                        <area alt="spotify" title="spotify" shape="rect" coords="0, 0, 260, 111" href="https://www.spotify.com/es/" />
                        <area alt="Twitch" title="Twitch" shape="RECT" coords="0,114,260,239" href="https://www.twitch.tv/">
                        <area alt="Skype" title="Skype" shape="RECT" coords="0,241,260,352" href="https://www.skype.com/es/">
                        <area alt="BattleNET" title="BattleNET" shape="RECT" coords="0,354,260,442" href="http://eu.battle.net/es/">
                        <area alt="Youtube" title="Youtube" shape="RECT" coords="0,445,260,587" href="https://www.youtube.com/?hl=es&gl=ES">
                        <area alt="Steam" title="Steam" shape="RECT" coords="0,591,260,700" href="http://store.steampowered.com/?l=spanish">
                    </map>

                    <li>
                        <img src="@Url.Content("~/images/publicidad3.png")" usemap="#mapaAdrian">
                    </li>
                </div>
            </div>


                    </div>
                    <div class="clearfix"></div>

                </div>

    <!--scripts-->
    <script src="@Url.Content("~/Scripts/js/forms.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/react/react.js")" ></script>
    <!--<script src = "@Url.Content("~/Scripts/jsx/HelloWorld.jsx")" ></script>-->
    <script src="~/Scripts/js/menu.js"></script>
    <script src="~/Scripts/js/puntuar.js"></script>
</body>
</html>